{
  "manifest_version": 3,
  "name": "Firefox Spotlight Hybrid",
  "version": "3.0",
  "description": "Floating overlay on web pages, popup window on system pages.",
  "permissions": [
    "tabs", 
    "activeTab", 
    "scripting", 
    "windows",
    "search", 
    "bookmarks", 
    "history"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["spotlight.html", "spotlight.css", "spotlight.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "toggle-spotlight": {
      "suggested_key": {
        "default": "Command+Shift+9",
        "mac": "Command+Shift+9"
      },
      "description": "Toggle Spotlight"
    }
  }
}