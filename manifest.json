{
  "manifest_version": 3,
  "name": "Firefox Spotlight",
  "version": "1.3",
  "description": "Spotlight with separated search modes (%b, %h, %s).",
  "permissions": ["tabs", "activeTab", "windows", "storage", "search", "bookmarks", "history"],
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "commands": {
    "toggle-spotlight": {
      "suggested_key": {
        "default": "Command+Shift+9",
        "mac": "Command+Shift+9"
      },
      "description": "Open Spotlight-like window"
    }
  }
}